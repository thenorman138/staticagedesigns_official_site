---
import { Image } from 'astro:assets'

//utils import
import { slugify, formatDate } from '../js/utils'

const { title, date, author, image, description, category } = Astro.props
---

<header>
  <div class="container">
    <small>
      <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
    </small>
    <h1 class="h2">{title}</h1>
    <p>by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {formatDate(date)}</p>
  </div>
  <Image
    width="1200"
    height="600"
    format="webp"
    src={image.src}
    alt={image.alt}
    loading="lazy"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
  />
</header>
