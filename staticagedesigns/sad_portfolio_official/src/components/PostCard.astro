---
import { Card, Pagination } from 'accessible-astro-components'
import { slugify, formatDate } from '../js/utils'
import { Image } from 'astro:assets'
import Link from './Link.astro'

const { frontmatter, url } = Astro.props
const { title, date, author, image, description, category } = frontmatter
---

<!-- <pre>{JSON.stringify(frontmatter, null, 2)}</pre> -->
<article class="post_card">
  <small>
    <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
  </small>
  <a href={url} aria-hidden="true" tabindex="-1">
    <Image
      width="400"
      height="250"
      format="webp"
      src={image.src}
      alt={image.alt}
      loading="lazy"
      fit="cover"
      quality={80}
      aspectRatio="5:2"
      class="hero-image"
    />
  </a>
  <div class="content">
    <div>
      <h2><a href={url}>{title}</a></h2>
      <small>
        by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {formatDate(date)}
      </small>
    </div>
    <p>{description}</p>
    <a class="button" href={url}> Read More</a>
  </div>
</article>

